<?xml version="1.0" encoding="utf-8"?>
<com.zhuinden.simplestackdemonestedstack.presentation.paths.main.chromecast.ChromeCastView xmlns:android="http://schemas.android.com/apk/res/android"
                                                                                          android:orientation="vertical"
                                                                                          android:layout_width="match_parent"
                                                                                          android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content"
            android:text="Hello to Chrome Cast!"/>

        <EditText
            android:id="@+id/second_edittext"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_centerInParent="true"
            android:hint="Enter text here"
            android:layout_height="wrap_content" />
    </LinearLayout>
</com.zhuinden.simplestackdemonestedstack.presentation.paths.main.chromecast.ChromeCastView>